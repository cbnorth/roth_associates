doctype html

- var bodyClasses = [];
block beforeBody

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href=contents.css['styles.css'].url)
  body(class=bodyClasses)
    header.header
      div.container
        div.grid
            div.column.size12of12
              h1#logo
                  a(href="/") Roth &amp; Associates
              a.mobile_nav_button menu
              include navigation.jade
    div#content
      block content
    
    include footer
    block scripts
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
      script(src="/scripts/main.js")
      script.
          var $buoop = {c:2}; 
          function $buo_f(){ 
           var e = document.createElement("script"); 
           e.src = "//browser-update.org/update.js"; 
           document.body.appendChild(e);
          };
          try {document.addEventListener("DOMContentLoaded", $buo_f,false)}
          catch(e){window.attachEvent("onload", $buo_f)}

          $('.mobile_nav_button').click(function(){
            $('header nav').toggleClass('active');
          });

